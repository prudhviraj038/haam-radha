<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/cover_image"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#76000000"></LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/ch_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="false" />

            <com.mamacgroup.hamtest.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ch_title"
                android:layout_below="@+id/ch_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="?attr/news_item_fg"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/follow_btn_click">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/follow_btn_image"
                        android:src="@drawable/added"
                        android:layout_alignBottom="@+id/follow_btn"
                        android:layout_alignLeft="@+id/follow_btn"
                        android:layout_alignTop="@+id/follow_btn"
                        android:adjustViewBounds="false"
                        android:layout_alignRight="@+id/follow_btn"
                        android:scaleType="fitXY" />

                    <com.mamacgroup.hamtest.MyTextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:id="@+id/follow_btn"
                        android:textColor="@color/aa_app_blue"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:background="@drawable/border_empty_for_add" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>
                <com.mamacgroup.hamtest.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/member_text"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="?attr/black_color_text" />

                <com.mamacgroup.hamtest.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/member_count"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="?attr/black_color_text" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:divider="@drawable/divider_menu_icons_space"
                    android:showDividers="beginning|middle|end"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/linearLayout3" >

                    <ImageView
                        android:layout_width="@dimen/menu_icon_size"
                        android:layout_height="@dimen/menu_icon_size"
                        android:id="@+id/imageView17"
                        android:src="@drawable/members"
                        android:adjustViewBounds="false"
                        android:tint="?attr/black_color_text" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>