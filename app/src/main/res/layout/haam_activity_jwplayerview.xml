<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_jwplayerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#A71C21"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/back_vsss_jw"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/back_btn_white"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.mamacgroup.hamtest.HaamMerge.MyTextView
                android:id="@+id/tittlfdefdedfjw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextVie"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/slid_setting_jw"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:adjustViewBounds="true"
            android:src="@drawable/haam_settings"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.longtailvideo.jwplayer.JWPlayerView
            android:id="@+id/jwplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textColor="#ffffff" />
        </RelativeLayout>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
