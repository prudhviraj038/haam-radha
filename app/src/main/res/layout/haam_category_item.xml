<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mamacgroup.hamtest.HaamMerge.SqureImageView
            android:id="@+id/cat_img_adp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:orientation="vertical"
            android:layout_alignTop="@+id/cat_img_adp"
            android:layout_alignBottom="@+id/cat_img_adp"
            android:layout_alignLeft="@+id/cat_img_adp"
            android:layout_alignRight="@+id/cat_img_adp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mamacgroup.hamtest.HaamMerge.MyTextViewBold
                android:id="@+id/cat_title_adp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="News3"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                android:shadowColor="#000"
                android:shadowRadius="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dp">

            <com.mamacgroup.hamtest.HaamMerge.MyTextViewBold
                android:id="@+id/cat_title_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:shadowColor="#000"
                android:shadowRadius="5"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>