<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeBackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- SwipeBackLayout must contains only one direct child -->
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_main_anim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#A71C21"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/des_back_img"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/back_btn_white"
            android:adjustViewBounds="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/share"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.mamacgroup.hamtest.HaamMerge.MyTextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/font_adjust"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:adjustViewBounds="true"
            android:src="@drawable/haam_fontsize"
            android:tint="#ffffff" />

        <ImageView
            android:id="@+id/share_btn_des"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:adjustViewBounds="true"
            android:src="@drawable/share"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/efgrhtf"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView2"
                    android:focusableInTouchMode="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:id="@+id/des_page_ch_img"
                            android:adjustViewBounds="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp" />

                        <com.mamacgroup.hamtest.HaamMerge.MyTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/des_page_title"
                            android:textColor="#000"
                            android:textSize="20sp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="right" />

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            class="com.daimajia.slider.library.SliderLayout"
                            android:id="@+id/img_slider" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:id="@+id/des_imgg"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/des_tvv"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:layout_margin="10dp"
                            android:gravity="right" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/font_size_layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:id="@+id/font_adjust_view"
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:visibility="gone">

            <com.mamacgroup.hamtest.HaamMerge.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Size"
                android:id="@+id/fontsize_heading"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.mamacgroup.hamtest.HaamMerge.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/com.mamacgroup.nashr.MyTextView16"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <!--<app.minimize.com.seek_bar_compat.SeekBarCompat-->
                <!--android:id="@+id/materialSeekBar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:maxHeight="300sp"-->
                <!--app:progressColor="@color/aa_app_blue"-->
                <!--app:progressBackgroundColor="#ffffff"-->
                <!--app:thumbColor="#DEDEDE"-->
                <!--app:thumbAlpha="4.0"-->
                <!--android:layout_weight="1" />-->

                <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                    android:id="@+id/materialSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:corner_radius="10"
                    app:min_value="0"
                    app:max_value="20"
                    app:bar_color="#C69E89"
                    app:bar_highlight_color="#A54B17"
                    app:left_thumb_color="#775E4F"
                    app:left_thumb_color_pressed="#4C2D1A"
                    app:data_type="_integer"/>

                <com.mamacgroup.hamtest.HaamMerge.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/com.mamacgroup.nashr.MyTextView17"
                    android:textSize="38sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#57bebebe"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"></LinearLayout>

            <com.mamacgroup.hamtest.HaamMerge.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Style"
                android:id="@+id/font_style_heading"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:showDividers="none"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp">

                <com.mamacgroup.hamtest.HaamMerge.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:id="@+id/text_normal"
                    android:background="@drawable/border_full_appcolor_font"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center"
                    android:textColor="#ffffff" />

                <com.mamacgroup.hamtest.HaamMerge.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bold"
                    android:id="@+id/text_bold"
                    android:background="@drawable/border_empty_appcolor_font"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#A71C21" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
</LinearLayout>