<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#A71C21"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/back_cs_wish"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/back_btn_white"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />
        <ImageView
            android:id="@+id/fav_img_arc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@drawable/star" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.mamacgroup.hamtest.HaamMerge.MyTextView
                android:id="@+id/tittlee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextVie"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fav_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:src="@drawable/haam_search" />

        <ImageView
            android:id="@+id/slid_setting_wish"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:adjustViewBounds="true"
            android:src="@drawable/haam_settings"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:id="@+id/progressBar_llll_wish"
        android:visibility="gone">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/progressBarrw123r"
            android:src="@drawable/loading"
            android:layout_centerInParent="true" />
        <com.mamacgroup.hamtest.HaamMerge.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading......"
            android:id="@+id/pd_tv_cat_wish"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridView_neews_wish"
        android:layout_gravity="center_horizontal"
        android:numColumns="2"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"/>
        <com.mamacgroup.hamtest.HaamMerge.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Favorite News"
            android:id="@+id/no_fav_tv"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>