                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/new_feeds_background"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/new_feeds_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:gravity="center"
                                    android:text="New Feeds"
                                    android:textColor="#000000" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/webview_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <WebView
                                            android:id="@+id/webview"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1" />

                                        <LinearLayout
                                            android:id="@+id/webview_footer_holder"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="#FFFFFF"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:id="@+id/basket_ball_btn"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="#c26935"
                                                android:gravity="center_vertical|center_horizontal"
                                                android:orientation="horizontal"
                                                android:paddingBottom="5dp"
                                                android:paddingTop="5dp">

                                                <TextView
                                                    android:id="@+id/basket_ball_txt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:padding="5dp"
                                                    android:text="TextView"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold" />

                                                <ImageView
                                                    android:id="@+id/imageView10"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="28dp"
                                                    android:adjustViewBounds="true"
                                                    android:src="@drawable/bb_ic" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/foot_ball_btn"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"
                                                android:background="#a1b797"
                                                android:gravity="center_vertical|center_horizontal"
                                                android:orientation="horizontal"
                                                android:paddingBottom="5dp"
                                                android:paddingTop="5dp">

                                                <TextView
