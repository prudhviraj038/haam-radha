                                                    android:textSize="18sp"
                                                    android:textStyle="bold" />

                                                <ImageView
                                                    android:id="@+id/imageView14"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="28dp"
                                                    android:adjustViewBounds="true"
                                                    android:src="@drawable/fb_ic" />
                                            </LinearLayout>
                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/webprogressBar"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="?attr/aa_page_bg"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <pl.droidsonroids.gif.GifImageView
                                            android:id="@+id/webprogressBarrrrrr"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/output_progress" />
                                    </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <com.mamacgroup.hamtest.MyTextView1
                            android:id="@+id/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="world_fragment"
                            android:visibility="gone" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <FrameLayout
                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </LinearLayout>

                `

            </ViewFlipper>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/footer">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/aa_menu_line"
                    android:visibility="gone">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/backgroundColor"
                    android:baselineAligned="false"
                    android:paddingTop="2dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/world_news_img"
                            android:layout_width="@dimen/menu_icon_size"
                            android:layout_height="@dimen/menu_icon_size"
                            android:adjustViewBounds="false"
                            android:src="@drawable/global_inactive" />

                        <com.mamacgroup.hamtest.MyBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="World"
                            android:id="@+id/world_news_tv"
                            android:textSize="@dimen/menu_text_size"
                            android:textColor="@color/aa_menu_text"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/negative_margin" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/economy_news_img"
                            android:layout_width="@dimen/menu_icon_size"
                            android:layout_height="@dimen/menu_icon_size"
                            android:src="@drawable/list_inactive" />

                        <com.mamacgroup.hamtest.MyBoldTextView
                            android:id="@+id/economy_news_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/negative_margin"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Economy"
                            android:textColor="@color/aa_menu_text"
                            android:textSize="@dimen/menu_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/live_news_img"
                            android:layout_width="@dimen/menu_icon_size"
                            android:layout_height="@dimen/menu_icon_size"
                            android:src="@drawable/paly_inactive" />

                        <com.mamacgroup.hamtest.MyBoldTextView
                            android:id="@+id/live_news_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/negative_margin"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Live news"
                            android:textColor="@color/aa_menu_text"
                            android:textSize="@dimen/menu_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/sports_news_img"
                            android:layout_width="@dimen/menu_icon_size"
                            android:layout_height="@dimen/menu_icon_size"
                            android:adjustViewBounds="false"
                            android:src="@drawable/football_inactive" />

                        <com.mamacgroup.hamtest.MyBoldTextView
                            android:id="@+id/sports_news_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/negative_margin"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Sports"
                            android:textColor="@color/aa_menu_text"
                            android:textSize="@dimen/menu_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/settings_img"
                            android:layout_width="@dimen/menu_icon_size"
                            android:layout_height="@dimen/menu_icon_size"
                            android:src="@drawable/user_inactive" />

                        <com.mamacgroup.hamtest.MyBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:id="@+id/settings_news_tv"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textSize="@dimen/menu_text_size"
                            android:textColor="@color/aa_menu_text"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/negative_margin" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
