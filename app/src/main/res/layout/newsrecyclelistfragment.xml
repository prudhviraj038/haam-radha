                                            android:id="@+id/imageView41"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="false"
                                            android:src="@drawable/newsfeed" />

                                        <com.mamacgroup.hamtest.MyTextView
