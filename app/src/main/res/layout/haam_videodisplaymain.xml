<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/rl_utube_ll">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#A71C21"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/back_vsss"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/back_btn_white"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.mamacgroup.hamtest.HaamMerge.MyTextView
                android:id="@+id/tittleeeeeedf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextVie"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/slid_setting_wishdss"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:adjustViewBounds="true"
            android:src="@drawable/haam_settings"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible" />
    </LinearLayout>
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp" />

</RelativeLayout>